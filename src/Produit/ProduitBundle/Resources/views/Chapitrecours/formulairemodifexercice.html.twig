<div class="modal fade" id="infos-action-modif-exercice-chapter-{{ exercice.id }}" style="margin-top: 100px; z-index: 9999;">
<div class="modal-dialog modal-md">
<div class="modal-content" style="border-radius: 0px;">
<div class="modal-header" style="position: absolute; z-index: 3; width: 100%; padding: 2px 0px; box-shadow: 0 15px 15px -1px #f2f2f2 inset;background: #fff;">
<div style="box-shadow: 0px 6px 6px #CCC; margin: 0px;">
<button type="button" class="close" data-dismiss="modal" style="padding: 7px;">&times;</button>
<h4 class="modal-title" style="padding: 7px;"><span class="fa fa-file-text-o"></span> Modification de l'exercice n°{{ exercice.num }}</h4>
</div>
</div>
<hr style="margin-top: 38px; margin-bottom: 0px;"/>
<div  style="background: rgba(83, 101, 240, 1); height: 10px;">
</div>
<div style="background: #BDC3C7;">
	<div class="text-left" style="color: #fff; padding-left: 15px;">
	Chapitre <span class="mdi-av-play-arrow" style="font-size: 10px;"></span> {{ exercice.chapitrecours.name(50) }}
	</div>	
</div>	
<hr style="margin-bottom: 0px;"/>

<div class="modal-body" style="background: #fff; color: #333;">
<div style="background: #ECF0F1; padding: 15px;">
<form action="{{ path('produit_produit_modif_exercice_chapter_current', {'id': exercice.id }) }}" method="post" {{ form_enctype(formexercice1) }}>
<div>{{ form_label(formexercice1.file,'Importez l\'énnoncé de l\'éxercice depuis votre appareil') }}</div>
<div class="form-group">
{{ form_widget(formexercice1.file) }}
</div>
<div>{{ form_label(formexercice1.num,'Ajoutez le numéro de l\'éxercice') }}</div>
<div class="form-group">
{{ form_widget(formexercice1.num) }}
</div>

<div>{{ form_label(formexercice1.correctionexercice,'Importez la correction de l\'éxercice depuis votre appareil') }}</div>
<div class="form-group">
{{ form_widget(formexercice1.correctionexercice) }}
</div>

<button class="btn btn-primary btn-block btn-lg" style="margin-top: 15px;">Enregistrez <span class="glyphicon glyphicon-send"></span></button>

{{ form_rest(formexercice1) }}
</form>
</div>
</div>

<hr style="margin-bottom: 15px;"/>
<div class="modal-footer" style="text-align: right; padding: 7px; background: #222222; color: #fff;">
<span class="pull-left">&copy; {{ site }}</span>
{% include 'GeneralTemplateBundle:Menu:social.html.twig' %}
</div>

</div>
</div>
</div>

<script type="text/javascript">
$('.modification-exercice-{{ exercice.id }}').click(function(){
	$('#infos-action-modif-exercice-chapter-{{ exercice.id }}').modal('show');
});
</script>