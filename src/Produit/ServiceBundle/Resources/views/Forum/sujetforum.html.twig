<div class="panel panel-widget compose-left" style="margin-bottom: 7px; padding: 0px;">
<div class="btn-group pull-right">
	<a class="dropdown-toggle like-produit-courant-{{ sujet.id }}" data-toggle="dropdown" href="#!"><i class="fa fa-caret-down" style="margin-right: 10px; margin-top: 15px;"></i></a>
	<ul class="dropdown-menu pull-right text-left">
		<li><a href="#!" class="menutop-dropdown like-produit-courant" value="{{ sujet.id }}" style="border-radius: 0px;"> <em class="fa fa-angle-right" style="float: right"></em> <strong style="padding-right: 10px;"><em class=" fa fa-thumb-tack"></em>  Epingler ce sujet </strong></a></li>
		{% if sujet.user == app.user or is_granted('ROLE_GESTION') %}
		<li class="divider"></li>
		<li><a href="{{ path('produit_service_supprimer_commentaire_courant_article', {'id': sujet.id}) }}" class="menutop-dropdown" style="border-radius: 0px; color: red;"> <em class="fa fa-angle-right" style="float: right"></em> <strong style="padding-right: 10px;"><em class="fa fa-times"></em>  Supprimer ce sujet</strong></a></li>
		{% endif %}
	</ul>
</div>
<div class="chat-grid widget-shadow text-left" style="margin: 0px;">
	<ul style="padding: 0px 10px;">
		<a href="{{ path('produit_service_interventions_sujets_courant', {'id': sujet.id }) }}">
			<li class="item-menu-right open-element" style="display: block; width: 100%;margin-top: 15px; border-bottom: 1Px solid #ddd;">
				<div class="chat-left pull-left" style="width: 80px; margin-right: 15px;padding-right: 10px;">
					<img src="{% if sujet.user != null %}{% if sujet.user.imgprofil != null %}{{ asset(sujet.user.imgprofil.getWebpath) }}{% else %}{{ asset('template/images/co.png') }}{% endif %}{% else %}{{ asset('template/images/co.png') }}{% endif %}" alt="article aimÃ©" style="width: 70px; height:70px; border-radius: 5px; margin: 10px;"/>
				</div>
				<div class="chat-right">
					<p style="margin: 0px;"><strong>{% if sujet.user != null %}{{ sujet.user.name(25) }}{% else %}Anonyme{% endif %} <span class="fa fa-angle-double-right"></span> {{ sujet.titre }}</strong></p>
					<p style="margin: 0px;">{{ sujet.contenu|raw }} </p>
					<p style="margin: 0px;"><span class="badge"><span class="fa fa-calendar"></span> {{ sujet.date|date('d') }} {{ sujet.user.mois(sujet.date|date('m')) }} {{ sujet.date|date('Y') }} Ã  {{ sujet.date|date('H') }}:{{ sujet.date|date('i') }}</span> - <span class="badge"><span class="fa fa-envelope"></span> {{ sujet.nbmessage }} {% if sujet.nbmessage > 1 %}Messages{% else %}Message{% endif %}</span> - <span class="badge"> Intervenir <span class="glyphicon glyphicon-send"></span></span> </p>
				</div>
			<div class="clearfix"></div>
			</li>
		</a>
	</ul>
</div>
</div>