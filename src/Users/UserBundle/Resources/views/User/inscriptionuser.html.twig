						<option value="02">Février</option>
						<option value="03">Mars</option>
						<option value="04">Avril</option>
						<option value="05">Mai</option>
						<option value="06">Juin</option>
						<option value="07">Juillet</option>
						<option value="08">Août</option>
						<option value="09">Septembre</option>
						<option value="10">Octobre</option>
						<option value="11">Novembre</option>
						<option value="12">Décembre</option>
						</select>
					</div>
					</div>
					<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" style="padding: 0px;">
					<div class="form-group">
						{% set fin = "now"|date('Y') - 7 %}
						{% set debut = "now"|date('Y') - 110 %}
						<select name="annee" id="annee" class="form-control" style="border-radius: 0px; width: 100%;">
						{% for i in fin..debut %}
						<option value="{{ i }}">{{ i }}</option>
						{% endfor %}
						</select>
					</div>
					</div>
					</div>

					</fieldset>
					<fieldset style="padding-bottom: 15px;">
					<legend style="color: #fff;">Votre sexe: </legend>
					<div class="col-xs-6 espace-bottom espace-top" id="pop" style="padding: 0px;" data-toggle="popover" data-content="Quel est votre sexe ?" title="<h4 style='color: red;'>Erreur !!!<h4>" data-html="true">
					<input type="radio" name="genre" value="homme" id="homme"/>
					<strong class="text-danger"><label for="homme"><span class="glyphicon glyphicon-tag"></span> Homme</label></strong>
					</div>
					<div class="col-xs-6 espace-bottom espace-top" style="padding: 0px;">
					<input type="radio" name="genre" value="femme" id="femme" />
					<strong class="text-danger"><label for="femme"><span class="glyphicon glyphicon-tag"></span> Femme</label></strong>

					</div>
					</fieldset>
					<fieldset>
					<legend style="color: #fff;">Sécurisez votre compte: </legend>
					<div>
					<div><span style="color:red;">{{ form_errors(form.password) }}</span></div>
					<div class="form-group">
						{{ form_widget(form.password, {'attr': {'class': 'form-control', 'style': 'width: 100%;'}}) }}
					</div>
					</div>
					
					<div class="form-group">
						<input type="password" name="KeyWords" value="" class="form-control" required="" style="width: 100%; margin: 15px 0px;" placeholder="Reprendre le mot de passe">
					</div>
					</fieldset>
					<div>
						<button type="submit" class="btn btn-warning btn-lg">S'inscrire</button>
					</div>
					{{ form_rest(form) }}
				</form>

				</div><!-- /col-lg-6 -->
				<div class="col-lg-6" style="padding-top: 75px;">
